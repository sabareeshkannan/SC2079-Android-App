<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark"
    tools:context=".CanvasActivity">

    <!-- Top Bar with Tabs -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@color/bg_card"
        app:tabTextColor="@color/text_secondary"
        app:tabSelectedTextColor="@color/primary"
        app:tabIndicatorColor="@color/primary"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAP" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGS" />
    </com.google.android.material.tabs.TabLayout>

    <View
        android:id="@+id/toolbarDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/divider"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ================= MAP MODE LAYOUT (Split Screen) ================= -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutMapMode"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbarDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Guideline for Split -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineVertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.55" />

        <!-- LEFT: Canvas Container -->
        <androidx.cardview.widget.CardView
            android:id="@+id/canvasCard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/bg_card"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guidelineVertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp"> 

                <com.mdp26.mdp20.canvas.CanvasView
                    android:id="@+id/canvasView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <com.mdp26.mdp20.canvas.RobotView
                    android:id="@+id/robotView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- RIGHT: Controls Container -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottomControls"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/bg_card_light"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/guidelineVertical"
            app:layout_constraintEnd_toEndOf="parent">
            
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Status Header -->
                    <LinearLayout
                        android:id="@+id/statusHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/shape_circle"
                            android:backgroundTint="@color/status_success"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="STATUS:"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/text_secondary"
                            android:layout_marginEnd="6dp"/>

                        <TextView
                            android:id="@+id/robotStatusDynamic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="WAITING"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-black"
                            android:textColor="@color/primary"/>
                    </LinearLayout>

                    <!-- Coordinate Inputs Row -->
                    <LinearLayout
                        android:id="@+id/inputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <EditText
                            android:id="@+id/inputX"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:hint="X"
                            android:inputType="number"
                            android:background="@drawable/bg_input_modern"
                            android:paddingHorizontal="12dp"
                            android:gravity="center_vertical"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/inputY"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:hint="Y"
                            android:inputType="number"
                            android:background="@drawable/bg_input_modern"
                            android:paddingHorizontal="12dp"
                            android:gravity="center_vertical"
                            android:textSize="14sp" />

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1.5"
                            android:background="@drawable/bg_input_modern">
                            <Spinner
                                android:id="@+id/spinnerRobotFacing"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null" />
                        </FrameLayout>
                    </LinearLayout>

                    <!-- Primary Actions Row -->
                    <LinearLayout
                        android:id="@+id/actionButtons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnInitializeRobot"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="@string/initialize_robot"
                            android:background="@drawable/btn_primary_pill"
                            android:textColor="@color/white"
                            android:textAllCaps="false"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:stateListAnimator="@null"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnSendData"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="@string/send_data"
                            android:background="@drawable/btn_secondary_pill"
                            android:textColor="@color/primary"
                            android:textAllCaps="false"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:stateListAnimator="@null"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"
                        android:layout_marginBottom="12dp"/>

                    <!-- D-Pad Controls -->
                    <GridLayout
                        android:id="@+id/directionalControls"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="12dp"
                        android:columnCount="3"
                        android:rowCount="2">

                        <ImageButton
                            android:id="@+id/btnRobotArcLeft"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/ic_turn_left_arc"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:scaleType="fitCenter"
                            android:padding="6dp"
                            app:tint="@color/primary"/>

                        <ImageButton
                            android:id="@+id/btnRobotForward"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/ic_arrow_up"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:scaleType="fitCenter"
                            android:padding="6dp"
                            app:tint="@color/primary"/>

                        <ImageButton
                            android:id="@+id/btnRobotArcRight"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/ic_turn_right_arc"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:scaleType="fitCenter"
                            android:padding="6dp"
                            app:tint="@color/primary"/>

                        <ImageButton
                            android:id="@+id/btnRobotLeft"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/ic_rotate_left"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:scaleType="fitCenter"
                            android:padding="6dp"
                            app:tint="@color/primary"/>

                        <ImageButton
                            android:id="@+id/btnRobotBackward"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/ic_arrow_down"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:scaleType="fitCenter"
                            android:padding="6dp"
                            app:tint="@color/primary"/>

                        <ImageButton
                            android:id="@+id/btnRobotRight"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/ic_rotate_right"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:scaleType="fitCenter"
                            android:padding="6dp"
                            app:tint="@color/primary"/>
                    </GridLayout>
                    
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnRobotStart"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="@string/start_robot"
                        android:background="@drawable/btn_primary_pill"
                        android:textColor="@color/white"
                        android:textAllCaps="true"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:stateListAnimator="@null"/>

                </LinearLayout>
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ================= LOG MODE LAYOUT ================= -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutLogMode"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/toolbarDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/logContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/bg_card"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="COMMUNICATION HISTORY"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="8dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"/>

                <ScrollView
                    android:id="@+id/ReceiveMsgScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/bg_card"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/ReceiveMsgTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="> System ready."
                        android:fontFamily="monospace"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"/>
                </ScrollView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical"
                    android:background="@color/bg_card">

                    <EditText
                        android:id="@+id/chatInputBox"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_input_modern"
                        android:paddingHorizontal="16dp"
                        android:hint="@string/input_prompt"
                        android:textSize="15sp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnSend"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginStart="12dp"
                        android:minWidth="80dp"
                        android:text="@string/send_input"
                        android:textColor="@color/primary"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:textAllCaps="true"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Placeholder to prevent missing ID reference in Java depending on import -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/topAppBar"
        android:layout_width="0dp"
        android:layout_height="1dp" 
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/> 

</androidx.constraintlayout.widget.ConstraintLayout>
