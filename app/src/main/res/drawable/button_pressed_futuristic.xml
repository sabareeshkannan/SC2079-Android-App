<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <!-- Pressed glow -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#9D4EDD60" />
                    <corners android:radius="14dp" />
                </shape>
            </item>
            <!-- Pressed gradient -->
            <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="135"
                        android:startColor="@color/primary_dark"
                        android:centerColor="@color/primary"
                        android:endColor="@color/secondary_dark"
                        android:type="linear" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!-- Normal glow -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#9D4EDD40" />
                    <corners android:radius="14dp" />
                </shape>
            </item>
            <!-- Normal gradient -->
            <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="135"
                        android:startColor="@color/primary"
                        android:centerColor="@color/primary_light"
                        android:endColor="@color/secondary"
                        android:type="linear" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
